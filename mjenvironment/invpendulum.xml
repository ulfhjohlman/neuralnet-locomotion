<mujoco model="inverted pendulum">
	<compiler inertiafromgeom="true"/>
	<default>
		<joint armature="0" damping="1" limited="true"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
		<tendon/>
		<motor ctrlrange="-1 1"/>
	</default>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.02"/>
	<size nstack="3000"/>
	<worldbody>
		<geom name='floor' pos='0 0 0' size='1 1 .125' type='plane' rgba="0.0 0.0 0.0 0.0" condim='3' friction="1 .1 .1"/>
		<geom name="rail" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.3 0.3 0.7 1" size="0.02 1" type="capsule"/>
		<body name="cart" pos="0 0 0">
			<joint axis="1 0 0" limited="true" name="slider" pos="0 0 0" range="-3 3" type="slide"/>
			<site name="center" pos="0 0 0" size=".1" type="sphere" rgba="0.3 0.2 0.1 0.3"/>
			<geom name="cart" pos="0 0 0" quat="0.707 0 0.707 0" size="0.1 0.1" type="capsule"/>
			<body name="pole" pos="0 0 0">
				<joint axis="0 1 0" name="hinge" pos="0 0 0" limited="false" range="-90 90" type="hinge"/>
				<geom fromto="0 0 0 0.001 0 0.6" name="cpole" rgba="0 0.7 0.7 1" size="0.049 0.3" type="capsule"/>
				<site name="tip" pos="0 0 0.6" size=".1" type="sphere" rgba="0.3 0.2 0.1 0.3"/>
				<!--                 <body name="pole2" pos="0.001 0 0.6"><joint name="hinge2" type="hinge" pos="0 0 0" axis="0 1 0"/><geom name="cpole2" type="capsule" fromto="0 0 0 0 0 0.6" size="0.05 0.3" rgba="0.7 0 0.7 1"/><site name="tip2" pos="0 0 .6"/></body>-->
			</body>
		</body>
	</worldbody>
	<actuator>
		<motor gear="100" joint="slider" name="slide"/>
	</actuator>
	<sensor>
		<jointpos name="slider_sens"    	joint="slider" />
		<velocimeter name="speed"		site="center" />
		<jointpos name="rot"  			joint="hinge" />
		<jointvel name="dotrot"  		joint="hinge" />
	</sensor>
</mujoco>